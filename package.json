{
  "private": true,
  "name": "Website",
  "version": "1.0.0",
  "scripts": {
    "build": "preact build --no-sw --no-esm --preload --src='preact'",
    "serve": "sirv build --host 0.0.0.0 --port 3000 --cors",
    "dev": "PORT=3000 preact watch --no-sw --no-esm --src='preact'"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-preact": "^1.1.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "node-sass": "^4.14.1",
    "node-sass-utils": "^1.1.3",
    "preact-cli": "^3.0.0",
    "preact-cli-plugin-critical-css": "^0.1.0",
    "sass-loader": "^9.0.3",
    "sirv-cli": "1.0.3",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0"
  },
  "dependencies": {
    "preact": "10.3.2",
    "preact-render-to-string": "5.1.4",
    "preact-router": "3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
